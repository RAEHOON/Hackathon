<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/main_black">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:elevation="4dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="뒤로가기"
            android:src="@drawable/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="회원가입"
            android:textColor="@color/main_white"
            android:textSize="20dp" />
    </Toolbar>

    <EditText
        android:id="@+id/et_find_id_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일을 입력하세요."
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/main_white"
        android:textColorHint="@color/main_white"
        android:inputType="textEmailAddress"
        android:backgroundTint="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_find_id_request"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="인증번호 요청"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/main_black"
        android:backgroundTint="@color/main_white"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:id="@+id/layout_find_id_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_find_id_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="인증번호 입력"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/main_white"
            android:textColorHint="@color/main_white"
            android:inputType="number"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tv_find_id_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03:00"
            android:textColor="#FF6666"
            android:textSize="14sp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btn_find_id_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="인증 확인"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/main_black"
            android:backgroundTint="@color/main_white" />
    </LinearLayout>

</LinearLayout>
